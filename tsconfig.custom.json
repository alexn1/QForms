{
    "compilerOptions": {
        "target": "ES2017",
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "rootDir": "src",
        "outDir": "dist",
        "moduleResolution": "node",
        "module": "commonjs",
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "removeComments": true
    }
}
