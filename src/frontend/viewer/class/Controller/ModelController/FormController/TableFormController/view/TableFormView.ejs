<div id="<%=model.page.id%>_<%=model.name%>" class="TableFormView <%=model.name%> full flex-rows">
    <div class="flex-min">
        <% if (model.data.refreshButton && model.data.refreshButton === 'true') {%>
            <button class="btn btn-default btn-xs refresh"><%=model.page.app.data.text.form.refresh%></button>
        <% } %>
        <% if (model.data.newRowMode !== 'disabled') {%>
            <button class="btn btn-default btn-xs new"><%=model.page.app.data.text.form.new%></button>
        <% } %>
        <% if (model.data.deleteRowMode !== 'disabled') {%>
            <button class="btn btn-default btn-xs delete"><%=model.page.app.data.text.form.delete%></button>
        <% } %>
    </div>
    <div id="<%=model.page.id%>_<%=model.name%>_GridWidget" class="GridWidget flex-max" tabindex="0">
        <div class="head">
            <table>
                <tr>
                    <% for (const fieldName in model.data.fields) {
                        const field = model.data.fields[fieldName];
                        if (field.isVisible === 'false') {
                            continue;
                        }
                        const width = (field.width === '0') ? 100 : parseInt(field.width);
                    %>
                        <td data-column-name="<%=field.name%>" style="width:<%=width%>px;">
                            <div><%=field.caption%></div>
                            <span class="resize"></span>
                        </td>
                    <% } %>
                    <td></td>
                </tr>
            </table>
        </div>
        <div class="block"></div>
    </div>
    <div class="flex-min paging">
        <div class="countBlock">
            <span><%=model.page.app.data.text.form.count%></span>
            <span class="count"></span>
        </div>
        <button class="btn btn-default btn-xs previous"><%=model.page.app.data.text.form.previous%></button>
        <select class="goto"></select>
        <button class="btn btn-default btn-xs next"><%=model.page.app.data.text.form.next%></button>
    </div>
</div>
