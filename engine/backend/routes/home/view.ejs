<!DOCTYPE html>
<html>
<head>
    <!-- <%=version%> -->
    <meta charset="utf-8"/>
    <title>QForms</title>
    <!-- jquery -->
    <script src="common/lib/jquery/jquery-1.11.1.min.js"></script>
    <!-- bootstrap -->
    <link href="common/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="common/lib/bootstrap/css/bootstrap-theme.min.css" rel="stylesheet">
    <script src="common/lib/bootstrap/js/bootstrap.min.js"></script>
    <!-- qforms -->
    <script src="common/qforms.js"></script>
    <% home_class_css.forEach(function (filePath) {
        %><link rel="stylesheet" href="<%=filePath%>"/><%='\n'%><%
    });
    home_class_js.forEach(function (filePath) {
        %><script src="<%=filePath%>"></script><%='\n'%><%
    }); %>
    <!-- end -->
    <script>
        $(document).ready(function() {
            QForms();
            new HomeController().init();
            $('#btnRun').click(function() {
                if ($('#lbApp').val()) {
                    window.location.href = "/view/{app}".replace("{app}",$('#lbApp').val());
                }
            });
            $('#lbApp').dblclick(function() {
                if ($('#lbApp').val()) {
                    window.location.href = "/view/{app}".replace("{app}",$('#lbApp').val());
                }
            });
            $('#btnEdit').click(function() {
                if ($('#lbApp').val()) {
                    window.location.href = "/edit/{app}".replace("{app}",$('#lbApp').val());
                }
            });
        });
    </script>
</head>
<body>
<div class="container" style="background-color: #eee;">
    <div class="row" style="margin: 50px 0;">
        <div class="col-md-offset-2 col-md-6
                    col-sm-offset-1 col-sm-6
                    col-xs-8">
            <select id="lbApp"  size="15" style="width: 100%;">
                <% appInfos.forEach(function(appInfo) {
                    var value = appInfo.dirName + '/' + appInfo.fileName;
                    %><option value="<%=value%>"><%=value%></option><%='\n'%><%
                }); %>
            </select>
        </div>
        <div class="col-md-2
                    col-sm-3
                    col-xs-4">
            <button id="btnRun" class="btn btn-primary btn-block">Запустить</button>
            <button id="btnEdit" class="btn btn-default btn-block">Редактировать</button>
            <button id="btnCreate" class="btn btn-default btn-block">Создать...</button>
        </div>
    </div>
</div>
</body>
</html>